# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://crawler:your_secure_postgres_password_here@postgres:5432/crawler

# RabbitMQ Configuration
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here
RABBITMQ_URL=amqp://crawler:your_secure_rabbitmq_password_here@rabbitmq:5672/

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200

# Application Configuration
PYTHONPATH=/app
LOG_LEVEL=INFO

# Storage Configuration
STORAGE_PATH=/app/storage

# Crawler Configuration
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (compatible; ProductCrawler/1.0)

# Celery Configuration
CELERY_BROKER_URL=amqp://crawler:your_secure_rabbitmq_password_here@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
